<h1>Answer: <%= @answer.user_name %></h1>
<h2>Question: <%= @question.title %></h2>
<h3><%= @answer.body %></h3>

<p><%= link_to "Edit answer", edit_question_answer_path(@question, @answer) %></p>
<p><%= link_to "Delete answer", question_answer_path(@question, @answer),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to question", question_path(@question) %></p>
